{
    "manifest_version": 2,
    "name": "Watchdog",
    "description": "A productivity tool that allows you to set timers for your tasks.",
    "version": "0.0.1",
    "author": "Tony Dinh",
    "background": {
        "persistent": true,
        "scripts": [
            "build/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "build/assets/icon@1x.png",
            "24": "build/assets/icon@1.5x.png",
            "32": "build/assets/icon@2x.png"
        },
        "default_title": "Watchdog",
        "default_popup": "build/index.html?popup=true"
    },
    "permissions": [
        "alarms",
        "background",
        "notifications",
        "storage"
    ]
}
